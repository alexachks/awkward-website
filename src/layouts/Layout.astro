---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Awkward Media - Canadian SEO Agency", description = "Professional SEO agency in Canada. We increase website traffic and improve search rankings for businesses across Canada." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <!-- SEO Meta Tags -->
    <!-- cms:text key="meta.title" label="Page Title" maxlength="70" required="true" -->
    <title>{title}</title>
    <!-- /cms:text -->
    
    <!-- cms:textarea key="meta.description" label="Meta Description" maxlength="160" required="true" -->
    <meta name="description" content={description}>
    <!-- /cms:textarea -->
    
    <!-- cms:text key="meta.keywords" label="Keywords" -->
    <meta name="keywords" content="SEO agency Canada, search engine optimization, website traffic growth, Google rankings, digital marketing, Toronto SEO, Vancouver SEO">
    <!-- /cms:text -->
    
    <meta name="author" content="Awkward Media">
    <meta name="robots" content="index, follow">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://awkwardmedia.ca/">
    <!-- cms:text key="og.title" label="Open Graph Title" -->
    <meta property="og:title" content="Awkward Media - Leading Canadian SEO Agency">
    <!-- /cms:text -->
    <!-- cms:textarea key="og.description" label="Open Graph Description" -->
    <meta property="og:description" content="Professional SEO agency in Canada. We increase website traffic and improve search rankings for businesses across Canada.">
    <!-- /cms:textarea -->
    <!-- cms:image key="og.image" alt="Open Graph Image" -->
    <meta property="og:image" content="https://awkwardmedia.ca/og-image.jpg">
    <!-- /cms:image -->
    <meta property="og:site_name" content="Awkward Media">
    <meta property="og:locale" content="en_CA">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://awkwardmedia.ca/">
    <!-- cms:text key="twitter.title" label="Twitter Title" -->
    <meta property="twitter:title" content="Awkward Media - Leading Canadian SEO Agency">
    <!-- /cms:text -->
    <!-- cms:textarea key="twitter.description" label="Twitter Description" -->
    <meta property="twitter:description" content="Professional SEO agency in Canada. We increase website traffic and improve search rankings.">
    <!-- /cms:textarea -->
    <!-- cms:image key="twitter.image" alt="Twitter Image" -->
    <meta property="twitter:image" content="https://awkwardmedia.ca/og-image.jpg">
    <!-- /cms:image -->
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" href="/favicon.png">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://awkwardmedia.ca/">
    
    <!-- DNS Prefetch & Preconnect for external resources -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    <link rel="dns-prefetch" href="//img.youtube.com">
    <link rel="dns-prefetch" href="//logo.clearbit.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://img.youtube.com">
    <link rel="preconnect" href="https://logo.clearbit.com">
    
    <!-- Preload critical images -->
    <link rel="preload" as="image" href="/images/photo-1517935706615-2717063c2225.jpeg" imagesizes="100vw" imagesrcset="/images/photo-1517935706615-2717063c2225.jpeg 1920w">
    <link rel="preload" as="image" href="https://img.youtube.com/vi/NBYvS_w6yMQ/maxresdefault.jpg" imagesizes="(max-width: 768px) 100vw, 50vw">
    
    <!-- Preload Critical Resources -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    
    <!-- Styles with optimized font-display -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"></noscript>
    
    <!-- Critical CSS inline -->
    <style>
        /* Critical styles for above-the-fold content */
        body{margin:0;font-family:Inter,system-ui,-apple-system,sans-serif;background:#000}
        *{box-sizing:border-box}
        .sr-only{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);border:0}
        /* Font fallback for performance */
        .font-fallback{font-family:system-ui,-apple-system,BlinkMacSystemFont,sans-serif}
    </style>
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Awkward Media",
        "description": "Leading Canadian SEO agency specializing in search engine optimization and traffic growth",
        "url": "https://awkwardmedia.ca",
        "logo": "https://awkwardmedia.ca/logo.png",
        "contactPoint": {
            "@type": "ContactPoint",
            "telephone": "+1-XXX-XXX-XXXX",
            "contactType": "customer service",
            "availableLanguage": ["English", "French"]
        },
        "address": {
            "@type": "PostalAddress",
            "addressCountry": "CA"
        },
        "sameAs": [
            "https://linkedin.com/company/awkward-media"
        ]
    }
    </script>
</head>
<body>
    <slot />
    
    <!-- Inline Styles for Mobile Menu -->
    <style>
        .nav-menu.hidden { display: none; }
        .nav-menu:not(.hidden) { display: block; }
        .mobile-menu-toggle.active span:nth-child(1) { transform: rotate(45deg) translate(5px, 5px); }
        .mobile-menu-toggle.active span:nth-child(2) { opacity: 0; }
        .mobile-menu-toggle.active span:nth-child(3) { transform: rotate(-45deg) translate(7px, -6px); }
    </style>
    
    <!-- Optimized Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu functionality
            const mobileToggle = document.querySelector('.mobile-menu-toggle');
            const navMenu = document.querySelector('.nav-menu');
            
            if (mobileToggle && navMenu) {
                mobileToggle.addEventListener('click', function() {
                    navMenu.classList.toggle('hidden');
                    mobileToggle.classList.toggle('active');
                });
                
                // Close menu when clicking on links
                navMenu.addEventListener('click', function(e) {
                    if (e.target.tagName === 'A') {
                        navMenu.classList.add('hidden');
                        mobileToggle.classList.remove('active');
                    }
                });
            }
            
            // Mobile services submenu
            const mobileServicesToggle = document.querySelector('.mobile-services-toggle');
            const mobileServicesSubmenu = document.querySelector('.mobile-services-submenu');
            
            if (mobileServicesToggle && mobileServicesSubmenu) {
                mobileServicesToggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    mobileServicesSubmenu.classList.toggle('hidden');
                    const arrow = mobileServicesToggle.querySelector('svg');
                    if (arrow) arrow.style.transform = mobileServicesSubmenu.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
                });
            }
            
            // Optimized header scroll behavior with throttling
            let ticking = false;
            let lastScrollY = 0;
            const header = document.getElementById('main-header');
            
            if (header) {
                function updateHeader() {
                    const currentScrollY = window.scrollY;
                    
                    if (Math.abs(currentScrollY - lastScrollY) > 5) {
                        if (currentScrollY > lastScrollY && currentScrollY > 100) {
                            header.style.transform = 'translateY(-100%)';
                        } else {
                            header.style.transform = 'translateY(0)';
                        }
                        lastScrollY = currentScrollY;
                    }
                    ticking = false;
                }
                
                window.addEventListener('scroll', function() {
                    if (!ticking) {
                        requestAnimationFrame(updateHeader);
                        ticking = true;
                    }
                }, { passive: true });
            }
            
            // YouTube facade functionality
            const youtubeFacades = document.querySelectorAll('.youtube-facade');
            youtubeFacades.forEach(function(facade) {
                facade.addEventListener('click', function() {
                    const videoId = this.dataset.videoId;
                    const loadingIndicator = this.querySelector('.loading-indicator');
                    
                    if (loadingIndicator) loadingIndicator.classList.remove('hidden');
                    
                    const iframe = document.createElement('iframe');
                    iframe.className = 'w-full h-full';
                    iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&controls=1&showinfo=0&rel=0&modestbranding=1`;
                    iframe.title = 'Awkward Media SEO Services - Professional SEO Agency Video';
                    iframe.frameBorder = '0';
                    iframe.allow = 'autoplay; encrypted-media';
                    iframe.allowFullscreen = true;
                    
                    this.innerHTML = '';
                    this.appendChild(iframe);
                }, { once: true });
            });
        });
    </script>
</body>
</html>