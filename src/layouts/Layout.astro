            "@type": "PostalAddress",
            "addressCountry": "CA"
        },
        "sameAs": [
            "https://linkedin.com/company/awkward-media"
        ]
    }
    </script>
</head>
<body>
    <slot />
    
    <!-- Inline Styles for Mobile Menu -->
    <style>
        .nav-menu.hidden { display: none; }
        .nav-menu:not(.hidden) { display: block; }
        .mobile-menu-toggle.active span:nth-child(1) { transform: rotate(45deg) translate(5px, 5px); }
        .mobile-menu-toggle.active span:nth-child(2) { opacity: 0; }
        .mobile-menu-toggle.active span:nth-child(3) { transform: rotate(-45deg) translate(7px, -6px); }
    </style>
    
    <!-- Optimized Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu functionality
            const mobileToggle = document.querySelector('.mobile-menu-toggle');
            const navMenu = document.querySelector('.nav-menu');
            
            if (mobileToggle && navMenu) {
                mobileToggle.addEventListener('click', function() {
                    navMenu.classList.toggle('hidden');
                    mobileToggle.classList.toggle('active');
                });
                
                // Close menu when clicking on links
                navMenu.addEventListener('click', function(e) {
                    if (e.target.tagName === 'A') {
                        navMenu.classList.add('hidden');
                        mobileToggle.classList.remove('active');
                    }
                });
            }
            
            // Mobile services submenu
            const mobileServicesToggle = document.querySelector('.mobile-services-toggle');
            const mobileServicesSubmenu = document.querySelector('.mobile-services-submenu');
            
            if (mobileServicesToggle && mobileServicesSubmenu) {
                mobileServicesToggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    mobileServicesSubmenu.classList.toggle('hidden');
                    const arrow = mobileServicesToggle.querySelector('svg');
                    if (arrow) arrow.style.transform = mobileServicesSubmenu.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
                });
            }
            
            // Optimized header scroll behavior with throttling
            let ticking = false;
            let lastScrollY = 0;
            const header = document.getElementById('main-header');
            
            if (header) {
                function updateHeader() {
                    const currentScrollY = window.scrollY;
                    
                    if (Math.abs(currentScrollY - lastScrollY) > 5) {
                        if (currentScrollY > lastScrollY && currentScrollY > 100) {
                            header.style.transform = 'translateY(-100%)';
                        } else {
                            header.style.transform = 'translateY(0)';
                        }
                        lastScrollY = currentScrollY;
                    }
                    ticking = false;
                }
                
                window.addEventListener('scroll', function() {
                    if (!ticking) {
                        requestAnimationFrame(updateHeader);
                        ticking = true;
                    }
                }, { passive: true });
            }
            
            // Simplified YouTube autoplay - Only on user interaction or scroll
            const facade = document.querySelector('.youtube-facade');
            if (facade && facade.dataset.autoplay === 'true') {
                // Skip on slow/data saver connections
                const conn = navigator.connection;
                if (conn && (conn.saveData || conn.effectiveType === '2g')) return;
                
                // Load only when user interacts or scrolls near video
                const loadVideoOnInteraction = function() {
                    if (window.pageYOffset > 200 || document.documentElement.scrollTop > 200) {
                        const countdown = facade.querySelector('.autoplay-countdown');
                        const number = facade.querySelector('.countdown-number');
                        
                        if (countdown) countdown.classList.remove('hidden');
                        
                        let time = 3;
                        const timer = setInterval(function() {
                            if (number) number.textContent = --time;
                            
                            if (time <= 0) {
                                clearInterval(timer);
                                
                                // Load video
                                const iframe = document.createElement('iframe');
                                iframe.className = 'w-full h-full';
                                iframe.src = `https://www.youtube-nocookie.com/embed/${facade.dataset.videoId}?autoplay=1&mute=1&controls=1&rel=0&loop=1&playlist=${facade.dataset.videoId}&modestbranding=1&iv_load_policy=3&cc_load_policy=0&disablekb=1&fs=0&color=white&theme=dark`;
                                iframe.title = 'SEO Agency Video';
                                iframe.allow = 'autoplay';
                                iframe.allowFullscreen = true;
                                
                                facade.innerHTML = '';
                                facade.appendChild(iframe);
                            }
                        }, 1000);
                        
                        // Remove listeners after loading
                        window.removeEventListener('scroll', loadVideoOnInteraction);
                        document.removeEventListener('click', loadVideoOnInteraction);
                        document.removeEventListener('touchstart', loadVideoOnInteraction);
                    }
                };
                
                // Add interaction listeners
                window.addEventListener('scroll', loadVideoOnInteraction, { passive: true });
                document.addEventListener('click', loadVideoOnInteraction);
                document.addEventListener('touchstart', loadVideoOnInteraction, { passive: true });
                
                // Fallback: Load after 5 seconds if no interaction
                setTimeout(loadVideoOnInteraction, 5000);
            }
            
            // Handle click-to-play for manual video facades
            const manualFacades = document.querySelectorAll('.youtube-facade[data-autoplay="false"]');
            manualFacades.forEach(facade => {
                facade.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Create and load YouTube iframe immediately
                    const iframe = document.createElement('iframe');
                    iframe.className = 'w-full h-full rounded-xl';
                    iframe.src = `https://www.youtube-nocookie.com/embed/${facade.dataset.videoId}?autoplay=1&mute=0&controls=1&rel=0&modestbranding=1&iv_load_policy=3&cc_load_policy=0&color=white&theme=dark`;
                    iframe.title = 'How Our SEO Service Works - Video Tutorial';
                    iframe.allow = 'autoplay; encrypted-media';
                    iframe.allowFullscreen = true;
                    
                    // Replace facade with iframe
                    facade.innerHTML = '';
                    facade.appendChild(iframe);
                });
            });
        });
    </script>
</body>
</html>