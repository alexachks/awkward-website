            /* Hero Grid Pattern */
            .hero-grid-pattern {
                position: absolute;
                top: -80px;
                left: 0;
                width: 100%;
                height: calc(100% + 160px);
                background-image: 
                    linear-gradient(rgba(255, 255, 255, 0.04) 1px, transparent 1px),
                    linear-gradient(90deg, rgba(255, 255, 255, 0.04) 1px, transparent 1px);
                background-size: 120px 120px;
                animation: gridMoveDown 15s linear infinite;
            }
            
            .hero-grid-glow {
                position: absolute;
                top: -80px;
                left: 0;
                width: 100%;
                height: calc(100% + 160px);
                background-image:
                    radial-gradient(circle at 160px 240px, rgba(255, 255, 255, 0.15) 2px, transparent 2px),
