            /* Hero Grid Pattern */
            .hero-grid-pattern {
                position: absolute;
                top: -80px;
                left: 0;
                width: 100%;
                height: calc(100% + 160px);
                background-image: 
                    linear-gradient(rgba(255, 255, 255, 0.04) 1px, transparent 1px),
                    linear-gradient(90deg, rgba(255, 255, 255, 0.04) 1px, transparent 1px);
                background-size: 120px 120px;
                animation: gridMoveDown 15s linear infinite;
            }
            
            .hero-grid-glow {
                position: absolute;
                top: -80px;
                left: 0;
                width: 100%;
                height: calc(100% + 160px);
                background-image:
                    radial-gradient(circle at 160px 240px, rgba(255, 255, 255, 0.15) 2px, transparent 2px),
                    radial-gradient(circle at 480px 160px, rgba(255, 255, 255, 0.12) 2px, transparent 2px),
                    radial-gradient(circle at 320px 400px, rgba(255, 255, 255, 0.18) 2px, transparent 2px),
                    radial-gradient(circle at 640px 320px, rgba(255, 255, 255, 0.10) 2px, transparent 2px),
                    radial-gradient(circle at 800px 240px, rgba(255, 255, 255, 0.14) 2px, transparent 2px);
                background-size: 120px 120px;
                animation: gridMoveDown 15s linear infinite;
            }
            
            @keyframes gridMoveDown {
                0% {
                    transform: translateY(0);
                }
                100% {
