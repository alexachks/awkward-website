{
  "name": "awkward-media-website",
  "type": "module",
  "version": "1.0.0",
  "description": "Modern SEO-optimized Astro website for Awkward Media - Canadian SEO Agency with CMS integration",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev", 
    "build": "astro build",
    "preview": "astro preview",
    "serve": "astro preview --port=8080 --host=0.0.0.0",
    "test": "npm run test:html",
    "test:html": "echo 'HTML validation will be done by Astro build process'",
    "cms:analyze": "echo 'Analyzing CMS tags in Astro files...'",
    "docker:build": "docker build -t awkward-media .",
    "docker:run": "docker run -p 3000:8080 awkward-media",
    "docker:dev": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "format": "prettier --write src/**/*.{astro,js,ts}"
  },
  "keywords": [
    "seo",
    "agency",
    "website",
    "html",
    "css",
    "javascript",
    "responsive",
    "modern",
    "performance"
  ],
  "author": "Awkward Media",
  "license": "MIT",
  "dependencies": {
    "astro": "^4.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/awkward-media.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/awkward-media/issues"
  },
  "homepage": "https://awkwardmedia.ca"
}