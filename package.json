{
  "name": "awkward-media-website",
  "version": "1.0.0",
  "description": "Modern SEO-optimized website for Awkward Media - Canadian SEO Agency",
  "main": "index.html",
  "scripts": {
    "dev": "live-server . --port=3000 --host=localhost --open --watch=css,js,index.html",
    "start": "npm run dev",
    "build": "npm run minify:css && npm run minify:js",
    "serve": "live-server --port=8080 --host=0.0.0.0 --no-browser",
    "test": "npm run test:html && npm run test:lighthouse",
    "test:html": "html-validate index.html",
    "test:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "minify:css": "cleancss -o dist/css/styles.min.css css/styles.css",
    "minify:js": "terser js/main.js -o dist/js/main.min.js --compress --mangle",
    "docker:build": "docker build -t awkward-media .",
    "docker:run": "docker run -p 3000:8080 awkward-media",
    "docker:dev": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "lint:css": "stylelint css/**/*.css",
    "lint:html": "html-validate index.html",
    "format": "prettier --write *.html css/**/*.css js/**/*.js"
  },
  "keywords": [
    "seo",
    "agency",
    "website",
    "html",
    "css",
    "javascript",
    "responsive",
    "modern",
    "performance"
  ],
  "author": "Awkward Media",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "html-validate": "^8.7.4",
    "lighthouse": "^11.4.0",
    "clean-css-cli": "^5.6.3",
    "terser": "^5.26.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "prettier": "^3.1.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/awkward-media.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/awkward-media/issues"
  },
  "homepage": "https://awkwardmedia.ca"
}